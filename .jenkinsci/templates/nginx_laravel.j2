server {

listen 80;
    listen [::]:80;
    listen 443 ;

    server_name {{ project_name.stdout | trim }}.{{ ansible_default_ipv4.address }}.nip.io;
        ## Your only path reference.
        root {{ project_root }}/{{ project_type.stdout }}/{{ project_name.stdout | trim }}/public;
		
        # include snippets/addwebprojects-ssl.conf;
        # include snippets/ssl-params.conf;

        #access_log /srv/logs/laravel/$host-access.log;
        #error_log  /srv/logs/laravel/$host-error.log;

    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Content-Type-Options "nosniff";

    index index.html index.htm index.php;

    charset utf-8;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    error_page 404 /index.php;

    location ~ \.php$ {
        fastcgi_pass php{{ php_version }};
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
    }

    location ~ /\.(?!well-known).* {
        deny all;
    }
}